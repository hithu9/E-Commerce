<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name %> - Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
      <link rel="icon" type="image/png" href="/images/logo.png">
</head>
<body style="background-color:#214341;">
      <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
    <div class="container">
      <a class="navbar-brand d-flex align-items-center" href="/">
  <img src="/images/logo.png" alt="VogueMart Logo" style="height:40px; width:auto; margin-right:10px;">
  <span>VogueMart</span>
</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="mainNavbar">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/products">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">Cart</a>
          </li>
          <% if (user) { %>
  <li class="nav-item">
    <a href="/profile" class="nav-link">Profile</a>
  </li>
  <li class="nav-item">
    <a href="/logout" class="btn btn-outline-light ms-lg-2">Logout</a>
  </li>
<% } else { %>
  <li class="nav-item">
    <a href="/login" class="btn btn-outline-light ms-lg-2">Login</a>
  </li>
<% } %>

        </ul>
      </div>
    </div>
  </nav>
<div class="container py-5">
    <a href="/products" class="btn btn-secondary mb-4">Back to Products</a>
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm p-3">
                <img src="<%= product.image %>" class="w-100 rounded" style="height: 350px; object-fit: contain;">
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm p-4" style="background-color:#b2ced5;">
                <h2><%= product.name %></h2>
                <h4 class="text-success mt-2">â‚¹ <%= product.price %></h4>
                <p class="mt-3"><%= product.description %></p>
                <a href="/add-to-cart/<%= product._id %>" class="btn btn-warning w-100 mt-4" style="background-color: #FFE797;">ðŸ›’ Add to Cart</a>
                <a href="/purchase/<%= product._id %>" class="btn btn-success w-100 mt-3">Buy Now</a>
            </div>
        </div>
    </div>
</div>


<!-- Similar Products -->
<% if (similarProducts && similarProducts.length > 0) { %>
  <div class="container py-5">
    <h4 class="text-light mb-3">You may also like</h4>
    <div class="row g-4">
      <% similarProducts.forEach(sp => { %>
        <div class="col-12 col-sm-6 col-lg-3">
          <div class="card shadow-sm" style="background-color:#b2ced5;">
            <a href="/product/<%= sp._id %>">
              <img src="<%= sp.image %>" class="card-img-top" style="height:200px; object-fit:cover;">
            </a>
            <div class="card-body">
              <h6 class="card-title"><%= sp.name %></h6>
              <p class="card-text">â‚¹ <%= sp.price %></p>
              <a href="/add-to-cart/<%= sp._id %>" class="btn w-100" style="background-color:#FFE797">Add to Cart</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
<% } %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
